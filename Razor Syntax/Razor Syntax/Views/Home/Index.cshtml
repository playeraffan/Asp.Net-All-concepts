@* in view there we use razor syntax to erite c# code. *@
<h1>Index</h1>   
<h1>Current Date And Time Is @DateTime.Now</h1> 
<h1>Current year is @DateTime.Now.Year</h1>

@{
	var name = "Affan Hashmi";
	var age = 18;
}

<h2>Name = @name</h2>
<h2>Age = @age</h2>

@{
	var MyName = "Abdullah";
	if (MyName.Equals("Abdullah"))
	{ 
		<h3>"HELLO" @MyName</h3>
	}
	else
	{
		<h3>Bye Bye</h3>
	}
}

@{
	var number = 3;
	for (int i = 1; i <= 10; i++)
	{
		var table = number * i;
		<h4>@number x @i = @table</h4>   
	}
}
@{
	string[] names = { "Affan", "Uzair", "Noor", "Abdullah"};
	 foreach (var item in names)
	{
		<h1>@item<br></h1>
	}
}






